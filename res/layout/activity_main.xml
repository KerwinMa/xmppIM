<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:FooterIcon="http://schemas.android.com/apk/res/com.quinn.xmpp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quinn.xmpp.ui.main.MainActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/color_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_footer_height"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >

        <com.quinn.xmpp.ui.widget.FooterTextIcon
            android:id="@+id/chattingIcon"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            FooterIcon:iconSrc="@drawable/ic_action_chat"
            FooterIcon:text="聊天"
            FooterIcon:textSize="12sp"
            android:padding="5dip"
            FooterIcon:color="#ff181818" />

        <com.quinn.xmpp.ui.widget.FooterTextIcon
            android:id="@+id/contactsIcon"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            FooterIcon:iconSrc="@drawable/ic_action_cc_bcc"
            FooterIcon:text="@string/app_name"
            FooterIcon:textSize="12sp"
            android:padding="5dip"
            FooterIcon:color="#ff181818" />

        <com.quinn.xmpp.ui.widget.FooterTextIcon
            android:id="@+id/settingIcon"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            FooterIcon:iconSrc="@drawable/ic_action_settings"
            FooterIcon:text="我"
            FooterIcon:textSize="12sp"
            android:padding="5dip"
            FooterIcon:color="@color/actionbar_background_bottom" />
    </LinearLayout>

</LinearLayout>