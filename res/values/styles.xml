<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Global">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LargeButton" parent="Global">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/largebtn_background</item>
    </style>

    <style name="GlobleSingleLineEditText" parent="Global">
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SettingItemTxtParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:padding">8dip</item>
        <item name="android:background">@color/color_white</item>
    </style>

    <style name="SettingItemLeftTxt" parent="SettingItemTxtParent">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">4dip</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingItemRightTxt" parent="SettingItemTxtParent">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextViewStyleBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SpinnerDialogTextView" parent="TextViewStyleBase">
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="PopupDialogTitleTextView" parent="TextViewStyleBase">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PopupDialogChoiceBotton" parent="TextViewStyleBase"></style>

    <style name="msg_title" parent="TextViewStyleBase">
        <item name="android:textSize">@dimen/message_title_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="msg_previewWords" parent="TextViewStyleBase">
        <item name="android:textSize">@dimen/message_previewWords_textsize</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>

    <style name="msg_timeStamp" parent="TextViewStyleBase">
        <item name="android:textSize">@dimen/message_timestamp_textsize</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>

</resources>